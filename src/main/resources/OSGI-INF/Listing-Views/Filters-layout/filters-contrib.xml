<?xml version="1.0" encoding="UTF-8"?>

<component
	name="org.athento.nuxeo.athento-nx-hrm-doctypes.filters"
	version="1.0.0">
	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="filters">

		<filter id="filter@wf@Vr_Rrhh_Workflow" append="true">
			<rule grant="false">
				<condition>document.currentLifeCycleState != "Draft"</condition>
			</rule>
		</filter>
		<filter id="filter@wf@Selection_Rrhh_Workflow" append="true">
			<rule grant="false">
				<condition>document.currentLifeCycleState != "Draft"</condition>
			</rule>
		</filter>
		<filter id="filter@wf@Psc_Rrhh_Workflow" append="true">
			<rule grant="false">
				<condition>document.currentLifeCycleState != "Draft"</condition>
			</rule>
		</filter>

	</extension>

</component>