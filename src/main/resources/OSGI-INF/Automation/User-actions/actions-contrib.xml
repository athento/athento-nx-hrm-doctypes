<?xml version="1.0" encoding="UTF-8"?>

<component name="org.athento.nuxeo.athento-nx-hrm-doctypes.actions" version="1.0.0">
	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="actions">

		<action id="CreateVacationsRequest"
				label="Solicitud de Vacaciones" enabled="true"
				order="0" type="link" immediate="true"
				link="#{operationActionBean.doOperation('CreateVacationsRequest')}">
			<category>USER_MENU_ACTIONS</category>
			<filter id="filter@CreateVacationsRequest">
			</filter>
		</action>

		<action id="ApproveVacationsRequest"
				label="Solicitud de AprobaciÃ³n de las Vacaciones" enabled="true"
				order="0" type="link" immediate="true" icon="/icons/button_solicitar-aprobacion.png"
				link="#{operationActionBean.doOperation('ApproveVacationsRequest')}">
			<category>DOCUMENT_HEADER_ACTIONS_LIST</category>
			<filter id="filter@ApproveVacationsRequest">
				<rule grant="true">
					<type>VacationsRequest</type>
				</rule>
				<rule grant="false">
					<condition>document.currentLifeCycleState != "Draft"
					</condition>
				</rule>
			</filter>
		</action>

	</extension>

</component>