<?xml version="1.0" encoding="UTF-8"?>

<component name="org.athento.nuxeo.athento-nx-hrm-doctypes.eventhandler"
	version="1.0.0">
	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent"
		point="event-handlers">

		<handler chainId="PopulateUserWorkspaceDefault">
			<event>documentCreated</event>
			<filters>
				<doctype>Workspace</doctype>
				<attribute>Regular Document</attribute>
				<pathStartsWith>/default-domain/UserWorkspaces/</pathStartsWith>
			</filters>
		</handler>

		<handler chainId="HHRR-CalculateHolidays">
			<event>beforeDocumentModification</event>
			<filters>
				<doctype>VacationsRequest</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="CSP-assignID">
			<event>documentCreated</event>
			<filters>
				<doctype>Psc</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="SEL-assignID">
			<event>documentCreated</event>
			<filters>
				<doctype>Selection</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="Vr-assignID">
			<event>documentCreated</event>
			<filters>
				<doctype>VacationsRequest</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="UserFileRRHH-assignID">
			<event>documentCreated</event>
			<filters>
				<doctype>UserFileRRHH</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="HHRR-CalculateAccruedDays">
			<event>beforeDocumentModification</event>
			<event>aboutToCreate</event>
			<filters>
				<doctype>UserFileRRHH</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="updateManagerRRHH">
			<event>aboutToCreate</event>
			<filters>
				<doctype>UserFileRRHH</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="UserFileRRHH.autoSubscribe">
			<event>documentCreated</event>
			<filters>
				<doctype>UserFileRRHH</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

		<handler chainId="VacationsRequest.autoSubscribe">
			<event>documentCreated</event>
			<filters>
				<doctype>VacationsRequest</doctype>
				<attribute>Regular Document</attribute>
			</filters>
		</handler>

	</extension>

</component>